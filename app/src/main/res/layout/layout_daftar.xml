<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".daftarkosakata.DaftarKosakata">

    <Button
        android:id="@+id/kata_benda"
        android:layout_width="200dp"
        android:layout_height="81dp"
        android:layout_margin="10dp"
        android:background="@drawable/drw_daftar"
        android:onClick="kataBenda"
        android:text="KATA BENDA"
        android:textColor="#F4A460"
        android:textSize="20sp" />

    <Button
        android:id="@+id/kata_kerja"
        android:layout_width="200dp"
        android:layout_height="91dp"
        android:layout_margin="10dp"
        android:background="@drawable/drw_daftar"
        android:onClick="kataKerja"
        android:text="KATA KERJA"
        android:textColor="#F4A460"
        android:textSize="20sp" />

    <Button
        android:id="@+id/kata_sifat"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:layout_margin="10dp"
        android:background="@drawable/drw_daftar"
        android:onClick="kataSifat"
        android:text="KATA SIFAT"
        android:textColor="#F4A460"
        android:textSize="20sp" />

</LinearLayout>