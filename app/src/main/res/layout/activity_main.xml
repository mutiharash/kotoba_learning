<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:text="DAFTAR KOSAKATA dan KUIS"
        android:textSize="18sp" />

    <Button
        android:id="@+id/daftar_kosakata"
        android:layout_width="200dp"
        android:layout_height="89dp"
        android:layout_margin="10dp"
        android:background="@drawable/daftar_kosakata"
        android:onClick="daftarKosakata"
        android:text="DAFTAR KOSAKATA"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/kuis_kosakata"
        android:layout_width="200dp"
        android:layout_height="91dp"
        android:layout_margin="10dp"
        android:background="@drawable/kuis_kosakata"
        android:onClick="kuisKosakata"
        android:text="KUIS KOSAKATA"
        android:textColor="#ffff"
        android:textSize="20sp" />


</LinearLayout>